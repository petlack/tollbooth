{
  "compilerOptions": {
    // "skipLibCheck": true,
    // "moduleResolution": "node",
    // "resolveJsonModule": true,
    // "esModuleInterop": true,

    "target": "es6",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    "outDir": "./dist",
    "rootDir": "src"
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
